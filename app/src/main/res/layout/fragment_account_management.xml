<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".AccountManagementFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/account_management_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Management"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true">
        </TextView>

        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_below="@id/account_management_text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_below="@id/account_management_text"
            android:layout_toRightOf="@id/home_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/below_dashboard_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Management"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_below="@id/account_management_text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="72dp"/>

        <Button
            android:id="@+id/add_acc_btn"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:text="Add Account"
            android:layout_below="@id/home_text"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:padding="9dp"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/appointment_btn_1"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_acc_btn"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Text 1 (Admin) -->
                    <TextView
                        android:id="@+id/admin_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="@string/admin"
                        android:textColor="@color/blue"
                        android:layout_marginBottom="10dp"/>

                    <!-- Circle Image -->
                    <ImageView
                        android:id="@+id/circle_pic"
                        android:layout_width="63dp"
                        android:layout_height="78dp"
                        android:layout_marginRight="2dp"
                        android:layout_gravity="center"

                        android:src="@drawable/circle_pic" />

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/admin_icon"
                        android:layout_width="46dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-63.5dp"
                        android:layout_marginRight="2dp"

                        android:src="@drawable/admin_icon" /> <!-- Align icon to the start of the layout, vertically centered -->

                </LinearLayout>

                <!-- Number -->
                <TextView
                    android:id="@+id/number_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="1"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_2"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Text 1 (Admin) -->
                    <TextView
                        android:id="@+id/technician_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="@string/technician"
                        android:textColor="@color/background"
                        android:layout_marginBottom="10dp"/>

                    <!-- Circle Image -->
                    <ImageView
                        android:id="@+id/circle_pic_1"
                        android:layout_width="63dp"
                        android:layout_height="78dp"
                        android:layout_marginRight="2dp"
                        android:layout_gravity="center"

                        android:src="@drawable/circle_pic" />

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/technician_icon"
                        android:layout_width="46dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-63.5dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/technician_icon" /> <!-- Align icon to the start of the layout, vertically centered -->

                </LinearLayout>

                <!-- Number -->
                <TextView
                    android:id="@+id/number_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="2"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_3"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Text 1 (Admin) -->
                    <TextView
                        android:id="@+id/secretary_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="@string/secretary"
                        android:textColor="@color/background"
                        android:layout_marginBottom="10dp"/>

                    <!-- Circle Image -->
                    <ImageView
                        android:id="@+id/circle_pic_2"
                        android:layout_width="54dp"
                        android:layout_height="68dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="2dp"

                        android:src="@drawable/circle_pic" />

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/secretary_icon"
                        android:layout_width="40dp"
                        android:layout_height="37dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-54dp"
                        android:layout_marginRight="2dp"

                        android:src="@drawable/secretary_icon" /> <!-- Align icon to the start of the layout, vertically centered -->

                </LinearLayout>

                <!-- Number -->
                <TextView
                    android:id="@+id/number_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="3"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_4"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Text 1 (Admin) -->
                    <TextView
                        android:id="@+id/customer_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="@string/customer"
                        android:textColor="@color/background"
                        android:layout_marginBottom="10dp"/>

                    <!-- Circle Image -->
                    <ImageView
                        android:id="@+id/circle_pic_3"
                        android:layout_width="63dp"
                        android:layout_height="78dp"
                        android:layout_marginRight="2dp"
                        android:layout_gravity="center"
                        android:src="@drawable/circle_pic" />

                    <!-- Icon -->
                    <ImageView
                        android:id="@+id/customer_icon"
                        android:layout_width="40dp"
                        android:layout_height="37dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-57dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/customer_icon" /> <!-- Align icon to the start of the layout, vertically centered -->

                </LinearLayout>

                <!-- Number -->
                <TextView
                    android:id="@+id/number_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:text="1"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TableLayout
            android:id="@+id/user_accounts_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_5"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:elevation="8dp"
            android:padding="5dp">
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="User Accounts"
                    android:textSize="15sp"
                    android:textColor="@color/background"
                    android:gravity="left"/>
            </TableRow>

            <!-- Table Header -->
            <TableRow
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Role"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Created On"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Action"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>

                <!-- Hidden columns -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Account ID"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"
                    android:visibility="gone"/>

            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <!-- Sample Row 1 -->
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="technician"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:background="@drawable/technician_rounded_corner"
                    android:layout_marginTop="5dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jeffrey Sedoro"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="jeffrey@gmail.com"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2024-03-05T03:18:48:670Z"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"/>



                <!-- LinearLayout for Buttons -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- First Button -->
                    <Button
                        android:id="@+id/view_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:text="View"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:background="@drawable/view_btn"
                        android:textSize="14sp"
                        android:onClick="onViewButtonClick"/>

                    <!-- Second Button -->
                    <Button
                        android:id="@+id/delete_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_below="@id/view_btn"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="false"
                        android:text="Delete"

                        android:textColor="@color/white"
                        android:background="@drawable/archive_btn"
                        android:textSize="14sp" />

                </RelativeLayout>


                <!-- Add more TextViews for additional columns -->
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/grey" />
            <!-- Sample Row 2 -->
            <TableRow
                android:layout_marginBottom="2dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="secretary"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/secretary_rounder_corner"
                    android:layout_marginTop="5dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Zsafina Pearl"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="zsafinapearl@gmail.com"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2024-03-05T03:22:56:202Z"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"/>



                <!-- LinearLayout for Buttons -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- First Button -->
                    <Button
                        android:id="@+id/view_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:text="View"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:background="@drawable/view_btn"
                        android:textSize="14sp"
                        android:onClick="onViewButtonClick"/>

                    <!-- Second Button -->
                    <Button
                        android:id="@+id/delete_btn2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_below="@id/view_btn2"
                        android:layout_marginTop="5dp"
                        android:textAllCaps="false"
                        android:text="Delete"

                        android:textColor="@color/white"
                        android:background="@drawable/archive_btn"
                        android:textSize="14sp" />

                </RelativeLayout>
                <!-- Add more TextViews for additional columns -->
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/grey" />
            <!-- Add more TableRow elements for additional rows -->

        </TableLayout>

    </RelativeLayout>


</ScrollView>
