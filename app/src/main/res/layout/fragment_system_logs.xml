<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".SystemLogsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/system_logs_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System Logs"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true">
        </TextView>

        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_below="@id/system_logs_text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_below="@id/system_logs_text"
            android:layout_toRightOf="@id/home_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/below_system_logs_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System Logs"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_below="@id/system_logs_text"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="72dp"/>

        <TableLayout
            android:id="@+id/your_table_layout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/below_system_logs_text"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:elevation="8dp"
            android:padding="5dp">
            <TableRow
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="System Logs"
                    android:textSize="15sp"
                    android:textColor="@color/background"
                    android:gravity="left"/>
            </TableRow>

            <!-- Table Header -->
            <TableRow
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Account ID"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Role"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Date and Time"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Activity"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
                <!-- Add more TextViews for additional columns -->
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey" />

            <!-- Sample Row 1 -->
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="65e68f1898af7e4462250ca2"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Admin Acount"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="admin"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3/1/2024, 8:23:53 AM"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Created an appointment this coming 2026-02-05 for Jayson T"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"/>

                <!-- Add more TextViews for additional columns -->
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/grey" />
            <!-- Sample Row 2 -->
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6548f41a2d18ebe54300f567"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Admin Account"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="admin"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3/5/2024, 10:58:18 AM"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Created an account for This Admin"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"/>

                <!-- Add more TextViews for additional columns -->
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/grey" />
            <!-- Add more TableRow elements for additional rows -->

        </TableLayout>




    </RelativeLayout>


</ScrollView>
