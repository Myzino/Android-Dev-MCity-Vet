<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".BookAppointmentDialogFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dashboard_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Appointment"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true">
        </TextView>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/dashboard_text"
            android:layout_marginTop="15dp"
            android:background="@color/grey" />

        <!-- You can set onClick method as per your requirement -->

        <Button
            android:id="@+id/close_button"
            android:layout_width="25dp"
            android:elevation="8dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:onClick="closeActivity"
            android:background="@null"
            android:drawableStart="@drawable/close_btn" />

        <TextView
            android:id="@+id/first_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:layout_below="@id/line"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/last_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/last_name_text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textPersonName"
            android:hint=""
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:background="@drawable/edit_text_background"/>

        <TextView
            android:id="@+id/last_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_below="@id/first_name_edit_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/first_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_name_text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textPersonName"
            android:hint=""
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:background="@drawable/edit_text_background"/>

        <TextView
            android:id="@+id/technician_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Technician Name and Schedule"
            android:layout_below="@id/last_name_edit_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <Spinner
            android:id="@+id/technician_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@id/technician_name_text"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_background"
            android:gravity="start|center_vertical"
            android:drawableRight="@drawable/dropdown_icon" />


        <TextView
            android:id="@+id/date_appointment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date for your Appointment"
            android:layout_below="@id/technician_spinner"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <TextView
                android:id="@+id/calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/date_appointment_text"
                android:background="@drawable/edit_text_background"
                android:textSize="15sp"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:text="Selected Date: "
                android:drawableLeft="@drawable/calendar_icon" />

        <TextView
            android:id="@+id/address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:layout_below="@id/calendar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/address_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="text"
            android:hint="Ex. 1234 Main St"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:background="@drawable/edit_text_background"/>

        <TextView
            android:id="@+id/landmark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Landmark"
            android:layout_below="@id/address_name_edit_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/landmark_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/landmark_text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="text"
            android:hint="Ex. Juan's Store"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:background="@drawable/edit_text_background"/>

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_below="@id/landmark_name_edit_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/email_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="text"
            android:hint="example@gmail.com"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:background="@drawable/edit_text_background"/>

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_below="@id/email_name_edit_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/phone_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_number"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="number"
            android:hint=""
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:background="@drawable/edit_text_background"/>

        <TextView
            android:id="@+id/animal_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animal Type"
            android:layout_below="@id/phone_number_edit_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <Spinner
            android:id="@+id/animal_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/animal_type_text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_background"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:layout_below="@id/animal_type_spinner"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/age_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/age"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="number"
            android:hint=""
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:background="@drawable/edit_text_background"/>

        <TextView
            android:id="@+id/number_heads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Heads"
            android:layout_below="@id/age_number"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textColor="@color/black"/>


            <EditText
                android:id="@+id/number_head_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:inputType="number"
                android:layout_below="@id/number_heads"
                android:hint=""
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:background="@drawable/edit_text_background"/>

        <TextView
            android:id="@+id/services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services"
            android:layout_below="@id/number_head_edit"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textColor="@color/black"/>

        <CheckBox
            android:id="@+id/checkbox_option_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artificial Insemination"
            android:layout_below="@id/services"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="12dp"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/checkbox_option_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hormone Induction"
            android:layout_below="@id/checkbox_option_1"
            android:layout_marginTop="2dp"
            android:textSize="12dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/checkbox_option_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Castration"
            android:layout_below="@id/checkbox_option_2"
            android:layout_marginTop="2dp"
            android:textSize="12dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/checkbox_option_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iron Suplementation"
            android:layout_below="@id/checkbox_option_3"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:textSize="12dp"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/checkbox_option_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deworming"
            android:layout_below="@id/checkbox_option_4"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:textSize="12dp"
            android:textColor="@color/black" />

        <View
            android:id="@+id/line_below"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/checkbox_option_5"
            android:layout_marginTop="10dp"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/line_below"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="end">

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:elevation="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cancel_btn"
                android:textAllCaps="false"
                android:padding="9dp"
                android:textSize="14dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/create_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Appointment"
                android:elevation="8dp"
                android:background="@drawable/appointment_btn_1"
                android:textAllCaps="false"
                android:padding="9dp"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white" />
        </LinearLayout>


    </RelativeLayout>





</ScrollView>
